extends ../layouts/index

block content
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destiny_${travel.image}_Ln.jpg`, alt="about page image", class="img-fluid")
            .col.md-7
                h1=travel.title
                p
                    i.fas.fa-calendar-alt 
                    |  Departure Date: #{travel.departure_date} - Return Date: #{travel.return_date}
                p
                    i.fas.fa-rupee-sign
                    |  price : #{travel.price}
                p
                    i.fas.fa-users
                    |  Seat Available: #{travel.available}
                p #{travel.description}