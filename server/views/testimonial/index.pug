extends ../layouts/index

block content
    main.container.mt-5
        .row
            .col-md-12
                h1.page-title.text-center #{pageTitle}

                blockquote.text-center Read the Experiences from Our Clients
                    include ../layouts/partials/testimonials
            .col-md-12
                h2.text-center Add a Testimonial

                if(errors)
                    each error in errors
                        .alert.alert-danger.text-center=error.message
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimonial", method="POST")
                            .form-group
                                label(for="name") Full Name
                                input(type="text", name='name', id='name', placeholder="enter full name", class="form-control")
                            .form-group
                                label(for="email") Email
                                input(type="email", name='email', id='email', placeholder="enter email id", class="form-control")
                            .form-group
                                label(for="message") Message
                                textarea(row=10, column="50", name='message', id='message', placeholder="enter message", class="form-control")=message
                            input.btn.btn-success.btn-block(type='submit', value="Add Testimonial")